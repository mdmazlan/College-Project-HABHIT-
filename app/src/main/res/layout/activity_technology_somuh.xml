<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="2dp"
    android:background="@drawable/back1"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="11dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_civil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:background="@drawable/bg"
            android:textStyle="normal"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginBottom="12dp"
            android:text="সিভিল টেকনোলজি" />
        <Button
            android:id="@+id/btn_electrical_technology"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:background="@drawable/bg"
            android:textStyle="normal"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginBottom="12dp"
            android:text="ইলেকট্রিক্যাল টেকনোলজি" />
        <Button
            android:id="@+id/btn_electronics_technology"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:background="@drawable/bg"
            android:textStyle="normal"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginBottom="12dp"
            android:text="ইলেকট্রনিক্স টেকনোলজি" />
        <Button
            android:id="@+id/btn_cmt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:background="@drawable/bg"
            android:textStyle="normal"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginBottom="12dp"
            android:text="কম্পিউটার টেকনোলজি" />
        <Button
            android:id="@+id/btn_telecommunication_technology"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:background="@drawable/bg"
            android:textStyle="normal"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginBottom="12dp"
            android:text="টেলিকমিউনিকেশন টেকনোলজি" />
        <Button
            android:id="@+id/btn_textile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:background="@drawable/bg"
            android:textStyle="normal"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginBottom="12dp"
            android:text="টেক্সটাইল টেকনোলজি" />

        <Button
            android:id="@+id/btn_germents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:background="@drawable/bg"
            android:textStyle="normal"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginBottom="12dp"
            android:text="গার্মেন্টস ডিজাইন" />
        <Button
            android:id="@+id/btn_Pathlogy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:background="@drawable/bg"
            android:textStyle="normal"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginBottom="12dp"
            android:text="মেডিকেল টেকনোলজি (প্যাথলজি)" />
        <Button
            android:id="@+id/btn_dental"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:background="@drawable/bg"
            android:textStyle="normal"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginBottom="12dp"
            android:text="মেডিকেল টেকনোলজি
            (ডেন্টাল)" />
        <Button
            android:id="@+id/btn_bmcourse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:background="@drawable/bg"
            android:textStyle="normal"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginBottom="12dp"
            android:text="বি.এম." />
    </LinearLayout>
</ScrollView>
