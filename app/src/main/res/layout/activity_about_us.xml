<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:id="@+id/llzoom"
    android:background="@drawable/back1"
    android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
    android:orientation="vertical">
    <LinearLayout

        android:layout_width="match_parent"
        android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="32dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textAlignment="center"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:layout_marginBottom="2dp"
            android:text="Developed by" />
        <TextView
            android:layout_width="250dp"
            android:layout_height="2dp"
            android:background="#008000"
            android:layout_marginBottom="1dp"
            android:textAlignment="center"
            android:layout_gravity="center"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:textColor="#0b149e"
            android:textAlignment="center"
            android:textIsSelectable="true"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:text="Md Mazlan" />
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:src="@drawable/mazlan" />
        <TextView
            android:layout_width="match_parent"
            android:textColor="#000000"
            android:textIsSelectable="true"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text=" Email         : mdmazlan9@gmail.com" />

         <TextView
            android:layout_width="match_parent"
            android:layout_marginBottom="1dp"
            android:textColor="#000000"
             android:textIsSelectable="true"
             android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text=" Facebook  : www.fb.com/mdmazlan01" />
        <TextView
            android:layout_width="match_parent"
            android:textColor="#000000"
            android:paddingTop="50dp"
            android:textIsSelectable="true"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Last Update" />


        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="150dp"
            android:textColor="#000000"
            android:textAlignment="center"
            android:textSize="15dp"
           android:text="  version:  1.0.1" />


    </LinearLayout>
</LinearLayout >