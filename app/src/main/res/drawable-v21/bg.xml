<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#FF43D4FF" />
            <stroke
                android:width="1dp"
                android:color="#43d4ff" />
            <corners
                android:radius="6dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
        <uses-permission android:name="android.permission.VIBRATE"></uses-permission>

    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#43d4ff"
                android:endColor="#3479e1"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#4a8ef2" />
            <corners
                android:radius="6dp"
                />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>